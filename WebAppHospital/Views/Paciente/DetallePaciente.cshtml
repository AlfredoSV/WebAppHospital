
@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@model WebAppHospital.Models.PacienteModel
<div class="container">


        <div class="row formLogin">
            <h2>Detable - Paciente</h2>

            <div class="col">
                <div class="form-group">

                    @Html.TextBoxFor(m => m.Id, new { disabled = "disabled", @class = "form-control form-control-sm" })

                </div>
                <div class="form-group">

                    @Html.LabelFor(m => m.Nombre)

                    @Html.TextBoxFor(m => m.Nombre, new { disabled = "disabled", @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "text-danger" })

                </div>



                <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoPaterno)

                    @Html.TextBoxFor(m => m.ApellidoPaterno, new { disabled = "disabled", @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.ApellidoPaterno, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoMaterno)

                    @Html.TextBoxFor(m => m.ApellidoMaterno, new { disabled = "disabled", @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.ApellidoMaterno, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Edad)

                    @Html.TextBoxFor(m => m.Edad, new { disabled = "disabled", @class = "form-control form-control-sm" });

                    @Html.ValidationMessageFor(m => m.Edad, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Peso)

                    @Html.TextBoxFor(m => m.Peso, new { disabled = "disabled", @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Peso, null, new { @class = "text-danger" })
                </div>




                <div class="form-group">

                    <!--Por cuestiones de tiempo se agregó la etiqueta html directamente y no el Html helper-->
                    <label for="Sexo">Sexo:</label>


                    <select class="form-control" disabled="disabled" id="Sexo" name="Sexo">
                        <option>Masculino</option>
                        <option>Femenino</option>
                        <option>Otro</option>
                    </select>
                </div>
                @Html.ActionLink("Consultar pacientes", "Index", "Paciente")


              
            </div>

        </div>
   



</div>
