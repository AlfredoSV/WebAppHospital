
@{
    ViewBag.Title = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebAppHospital.Models.DoctorModel

<div class="container">

    @using (Html.BeginForm("EditarDoctor", "Doctor", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row formLogin">
            <h2>Editar - Doctor</h2>

            <div class="col">


                <div class="form-group">

                    @Html.TextBoxFor(m => m.Id, new { style = "display: none;", @class = "form-control form-control-sm" })

                    
                </div>

                <div class="form-group">

                    @Html.LabelFor(m => m.Nombre)

                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "text-danger" })

                </div>



                <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoPaterno)

                    @Html.TextBoxFor(m => m.ApellidoPaterno, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.ApellidoPaterno, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.ApellidoMaterno)

                    @Html.TextBoxFor(m => m.ApellidoMaterno, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.ApellidoMaterno, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Departamento)

                    @Html.TextBoxFor(m => m.Departamento, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Departamento, null, new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Especialidad)

                    @Html.TextBoxFor(m => m.Especialidad, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Especialidad, null, new { @class = "text-danger" })
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.NumCedula)

                    @Html.TextBoxFor(m => m.NumCedula, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.NumCedula, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">

                    @if (TempData["EdicionDocEx"] != null)
                    {
                        if ((bool)TempData["EdicionDocEx"])
                        {
                            <h5 class="text-success">
                                La edición del doctor fue éxitosa.
                            </h5>
                        }

                    }

                    @Html.ActionLink("Consultar doctores", "Index", "Doctor")

                    @if (TempData["ErrorCo"] != null)
                    {
                        <h5 class="text-danger">
                            @TempData["ErrorCo"]
                        </h5>
                    }



                </div>

                <input type="submit" value="Editar" class="btn btn-info rounded" />

            </div>

        </div>
    }

</div>