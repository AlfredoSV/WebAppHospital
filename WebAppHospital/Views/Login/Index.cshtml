@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@model WebAppHospital.Models.Login


<div class="container">

    @using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div class="row formLogin">
            <h2>Ingresar</h2>

            <div class="col">


                <div class="form-group">

                    @Html.LabelFor(m => m.Usuario);

                    @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control form-control-sm" })

                    @Html.ValidationMessageFor(m => m.Usuario, null, new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Contrasenia);

                    @Html.TextBoxFor(m => m.Contrasenia, new { @class = "form-control form-control-sm", @type = "password" })

                    @Html.ValidationMessageFor(m => m.Contrasenia, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    @Html.ActionLink("Registrarme", "Registro", "Login")
                </div>

                @if (@ViewBag.ErrorCo != null)
                {
                    <h5 class="text-danger">
                        @ViewBag.ErrorCo
                    </h5>
                }

                <input type="submit"  value="Ingresar" class="btn btn-info rounded" />

            </div>

        </div>
    }



</div>
